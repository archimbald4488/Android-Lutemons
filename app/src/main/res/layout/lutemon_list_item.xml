<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Lutemon Image -->

        <!-- Text area: Name, Stats, Experience -->

        <ImageView
            android:id="@+id/lutemon_image"
            android:layout_width="106dp"
            android:layout_height="94dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lutemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lutemon Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lutemon_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP: 20 | ATK: 4 | DEF: 3 | EXP: 0"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="221dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Send to Training Button -->
            <Button
                android:id="@+id/btn_send_to_training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send to Training" />

            <!-- Send to Battle Button -->
            <Button
                android:id="@+id/btn_send_to_battle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send to Battle" />

            <!-- Send to Home Button -->
            <Button
                android:id="@+id/btn_send_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send to Home" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
